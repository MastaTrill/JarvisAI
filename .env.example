
# .env.example for Jarvis AI Platform

# Flask/FastAPI secret key for JWT and session
JARVIS_SECRET_KEY=your-very-secret-key

# Database connection string (PostgreSQL example)
DATABASE_URL=postgresql://jarvis_user:password@localhost:5432/jarvis_db

# Redis connection string (for rate limiting, caching, audit logging)
REDIS_URL=redis://localhost:6379/0

# Email/SMTP settings (optional)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password

# OAuth2/SSO (optional)
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost,http://127.0.0.1

# Force HTTPS (set to 1 in production)
JARVIS_FORCE_HTTPS=0

# Slack integration (optional)
SLACK_TOKEN=your-slack-token
